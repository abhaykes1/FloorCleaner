<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArduinoMain"
    android:background="@color/button_page">

    <TextView
        android:id="@+id/Floor_cleaner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="FloorCleaner"
        android:textSize="36dp"
        android:textColor="#144809"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/Swacch_Bharat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Floor_cleaner"
        android:layout_centerHorizontal="true"
        android:text="Swacch Bharat Abhiyan"
        android:textColor="#144809"
        android:textSize="24dp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/FWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="FWD"
        android:background="@layout/mybutton"/>

    <Button
        android:id="@+id/BCK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="214dp"
        android:text="BCK"
        android:background="@layout/mybutton"/>

    <Button
        android:id="@+id/LFT"
        android:layout_width="wrap_content"
        android:background="@layout/mybutton"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Swacch_Bharat"
        android:layout_below="@+id/FWD"
        android:text="LFT"
        android:layout_alignLeft="@+id/Swacch_Bharat" />

    <Button
        android:id="@+id/RGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/mybutton"
        android:layout_alignEnd="@+id/Swacch_Bharat"
        android:layout_below="@+id/FWD"
        android:text="RGT"
        android:layout_alignRight="@+id/Swacch_Bharat" />

    <Button
        android:id="@+id/MPON"
        android:layout_width="wrap_content"
        android:background="@layout/mybutton"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BCK"
        android:text="MPON"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/MPOFF"
        android:layout_width="wrap_content"
        android:background="@layout/mybutton"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/BCK"
        android:text="MPOFF"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/PUMP"
        android:layout_width="wrap_content"
        android:background="@layout/mybutton"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MPON"
        android:layout_centerHorizontal="true"
        android:text="PUMP" />

    <Button
        android:id="@+id/S1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/mybutton"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/S2"
        android:text="S1"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/S2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Floor_cleaner"
        android:layout_marginBottom="44dp"
        android:text="S2"
        android:layout_alignLeft="@+id/Floor_cleaner" />

    <Button
        android:id="@+id/S3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/mybutton"
        android:layout_alignEnd="@+id/Floor_cleaner"
        android:layout_alignTop="@+id/S1"
        android:text="S3"
        android:layout_alignRight="@+id/Floor_cleaner" />

    <Button
        android:id="@+id/S4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/S1"
        android:text="S4"
        android:background="@layout/mybutton"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Build by: Abhay Kesharwani  "
        android:textColor="@color/button_green"
        android:textStyle="italic|bold"
        android:layout_alignParentRight="true" />
</RelativeLayout>
</ScrollView>